{
  "name": "github-ssh-profile-manager",
  "productName": "GitHub SSH Profile Manager",
  "version": "0.0.2",
  "main": "./dist/main/main.js",
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE_ENV=development electron .",
    "build": "tsc && npm run copy:index && npm run copy:tray && npm run build:css",
    "dev": "concurrently \"npm run copy:index\" \"npm run copy:tray\" \"npm run watch\" \"npm run watch:css\" \"npm run watch:html\" \"npm run start\"",
    "watch": "tsc -w",
    "watch:css": "tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/styles.css --watch",
    "watch:html": "nodemon --watch src/renderer/index.html --exec 'npm run copy:index'",
    "build:css": "tailwindcss -i ./src/renderer/styles.css -o ./dist/renderer/styles.css",
    "copy:index": "cp ./src/renderer/index.html ./dist/renderer/index.html",
    "copy:tray": "concurrently \"cp ./src/renderer/tray_icon_dark.png ./build-assets/tray_icon_dark.png\" \"cp ./src/renderer/tray_icon_light.png ./build-assets/tray_icon_light.png\"",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Zemichael Mehretu <zemichael.dev>",
  "license": "ISC",
  "description": "A simple tool to manage your GitHub SSH profiles.",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "lucide-static": "^0.471.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^22.10.6",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "nodemon": "^3.1.9",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.halepo.github-ssh-profile-manager",
    "productName": "GitHub SSH Profile Manager",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "./build-assets/app_icon.png"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
